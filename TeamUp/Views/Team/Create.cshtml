@{
    @model TeamUp.Controllers.TeamController.InputModel;
    ViewData["Title"] = "Stwórz zespół | Team-Up";
    ViewData["Description"] = "Stwórz swój zespół i rozpocznij pracę nad swoim projektem";
    var url = Context.Request.HttpContext.Request.Scheme + "://" + Context.Request.Host;
    var imageUrl = Url.Content(url + "/img/team.png");
    ViewData["Image"] = imageUrl;
}
<link rel="stylesheet" href="~/css/tabs.css">

<section class="team-create" id="team" style="margin-bottom: 50px;">
    <div class="container">
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-5 col-md-offset-1" style="text-align: right">
                        <img src="~/img/teamcreatetemp.jpg" />
                    </div>
                    <div class="col-md-6">
                        <form id="form-submit" action="" method="post">
                            <div class="row">
                                <div class="col-md-8" style="margin-bottom: 5px;">
                                    <h2>Tworzenie zespołu</h2>
                                </div>
                                <div class="col-md-8" style="margin-bottom: 5px;">
                                    <fieldset>
                                        <input class="form-control" asp-for="Name" placeholder="Nazwa" required="">
                                    </fieldset>
                                </div>
                                <div class="col-md-8" style="margin-bottom: 5px;">
                                    <fieldset>
                                        <textarea rows="4" class="form-control" asp-for="Description" placeholder="Opis" required=""></textarea>
                                    </fieldset>
                                </div>
                                <div class="col-md-8" style="margin-bottom: 5px;">
                                    <fieldset>
                                        <input asp-for="Localization" class="form-control" id="localization" placeholder="Lokalizacja" required="">
                                    </fieldset>
                                </div>
                                <div class="col-md-8" style="margin-bottom: 5px;">
                                    <fieldset>
                                        <label class="checkbox2" asp-for="Remote">
                                        Praca zdalna
                                        <input asp-for="Remote" />
                                        <span class="checkmark"></span>
                                        </label>
                                       
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-6" style="padding: 10px;">
                                            <fieldset>
                                                <button type="submit" id="form-submit" class="upload">Utwórz</button>
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="localization" id="top">
    <div class="container">
        <div class="row">
            <div>
                <div class="localization-caption">
                    <h3>Lokalizacja</h3>
                    <h4 id="local"></h4>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#localization").on("change keypress input", function () {
            $("#local").text($(this).val()); 
        });
    }); 
</script>