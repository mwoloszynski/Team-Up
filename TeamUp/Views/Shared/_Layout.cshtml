@using Microsoft.AspNetCore.Identity
@using TeamUp.Areas.Identity.Data

@inject SignInManager<TeamUpUser> SignInManager
@inject UserManager<TeamUpUser> UserManager 


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["Description"]">
    <link rel="image_src" href="@ViewData["Image"]" />

    <meta itemprop="name" content="@ViewData["Title"]">
    <meta itemprop="description" content="@ViewData["Description"]">
    <meta itemprop="image" content="@ViewData["Image"]">

    <meta property="og:image" content="@ViewData["Image"]">
    <meta property="og:type" content="website">
    <meta property="og:title" content="@ViewData["Title"]">
    <meta property="og:description" content="@ViewData["Description"]">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="~/css/fontAwesome.css">
    <link rel="stylesheet" href="~/css/hero-slider.css">
    <link rel="stylesheet" href="~/css/owl-carousel.css">
    <link rel="stylesheet" href="~/css/datepicker.css">
    <link rel="stylesheet" href="~/css/templatemo-style.css">
    <link rel="stylesheet" href="~/css/blog.css" />


    <link href="https://fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="icon" type="image/png" href="~/img/teamup_logo.png" />

    <script src="~/js/vendor/modernizr-2.8.3-respond-1.4.2.min.js"></script>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-NPT6GR5XN5"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-NPT6GR5XN5');
    </script>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-201800401-1">
    </script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-201800401-1');
    </script>

    <script data-ad-client="ca-pub-2060883484944819" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>

</head>
<body>
    <div class="wrap">
        <header id="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="tu-header-clearfix">
                            <button id="primary-nav-button" type="button">Menu</button>
                            <div class="tu-header-align">
                                <a asp-action="Index" asp-controller="Home">
                                    <div class="logo tu-header-div">
                                        <img src="~/img/team.png" class="tu-logo-image" alt="www.team-up.pl">
                                    </div>
                                </a>
                            </div>
                            <nav id="primary-nav" class="dropdown cf">
                                <ul class="dropdown menu">
                                    <li class='active'><a asp-action="Index" asp-controller="Blog">Aktualności</a></li>
                                    <li>
                                        <a href="#">Konto</a>
                                        <ul class="sub-menu">
                                            @if (SignInManager.IsSignedIn(User))
                                            {

                                                <li><a asp-area="Identity" asp-page="/Account/Manage/Index">Profil</a></li>
                                                <li>
                                                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark btn-logout" >Wyloguj się</button>
                                                    </form>
                                                </li>
                                            }
                                            else
                                            {
                                                <li><a asp-area="Identity" asp-page="/Account/Login">Zaloguj się</a></li>
                                                <li><a asp-area="Identity" asp-page="/Account/Register">Zarejestruj się</a></li>
                                            }

                                        </ul>
                                    </li>
                                    <li><a class="scrollTo" asp-action="Create" asp-controller="Team">Dodaj</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </header>
    </div>

    @RenderBody()


    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <div class="about-veno">
                        <div class="logo">
                            <img src="~/img/team.png" alt="www.team-up.pl">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="useful-links">
                        <div class="footer-heading">
                            <h4>Przydatne linki</h4>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <ul>
                                    <!-- <li><a asp-action="Prepare" asp-controller="Home"><i class="fa fa-stop"></i><del>FAQs</del></a></li> -->
                                    <li><a asp-area="Identity" asp-page="/Account/Register"><i class="fa fa-stop"></i>Zarejestruj się</a></li>
                                    <li><a asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-stop"></i>Zaloguj się</a></li>
                                    <li><a asp-area="Identity" asp-page="/Account/Manage/Index"><i class="fa fa-stop"></i>Mój profil</a></li>
                                    <li><a asp-action="More" asp-controller="Home"><i class="fa fa-stop"></i>Jak to działa?</a></li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul>
                                    <li><a asp-action="Privacy" asp-controller="Home"><i class="fa fa-stop"></i>Polityka Prywatności</a></li>
                                    <li><a asp-action="Terms" asp-controller="Home"><i class="fa fa-stop"></i>Regulamin</a></li>
                                    <li><a href="mailto: kontakt@team-up.pl"><i class="fa fa-stop"></i>Skontakuj się z nami</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="contact-info">
                        <div class="footer-heading">
                            <h4>Obserwuj nas</h4>
                        </div>
                        <div class="about-veno">
                            <ul class="social-icons">
                                <li>
                                    <a href="https://www.facebook.com/Team-Up-101451228881275"><i class="fa fa-facebook"></i></a>
                                    <!--
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-rss"></i></a>
                                    <a href="#"><i class="fa fa-dribbble"></i></a>
                                    -->
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <div class="sub-footer">
        <p>
            Copyright &copy; 2021 TeamUp

        </p>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js" type="text/javascript"></script>
    <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\/script>')</script>

    <script src="~/js/vendor/bootstrap.min.js"></script>

    <script src="~/js/datepicker.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/main.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
