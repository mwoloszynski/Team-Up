@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
    
    <div class="row">
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <div class="col-md-5 col-md-offset-1">
            <div class="left-content">
                <div class="item popular-item">
                    <form method="post" enctype="multipart/form-data">
                        <div class="thumb">
                            <img src="data:image;base64,@Convert.ToBase64String(Model.UserAccount.ProfilePicture)" alt="">

                        </div>
                        <div class="text-content">
                            <h4>Zdjęcie profilowe</h4>
                            <span>(zalecana rozdzielczość 1:1)</span>
                        </div>
                        <div class="plus-button">
                            <input asp-for="Input.ProfilePicute" type="file" id="upload" hidden style="display: none;" />
                            <label for="upload" class="upload">Wybierz plik</label>
                            <input type="submit" class="upload" value="Zapisz" />
                            <!-- <a href="#"><i class="fa fa-plus"></i></a> -->
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <form id="form-submit" action="" method="post">
                <div class="row">
                    <div class="col-md-6" style="margin-bottom: 5px;">
                        <fieldset>
                            <input asp-for="Input.FirstName" class="form-control" placeholder="Imię" required="" >
                        </fieldset>
                    </div>
                    <div class="col-md-6" style="margin-bottom: 5px;">
                        <fieldset>
                            <input asp-for="Input.LastName" class="form-control" placeholder="Nazwisko" required="" >
                        </fieldset>
                    </div>
                    <div class="col-md-12" style="margin-bottom: 5px;">
                        <fieldset>
                            <textarea asp-for="Input.Description" rows="6" class="form-control"  placeholder="Opis" ></textarea>
                        </fieldset>
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6" style="padding: 10px;">
                                <fieldset>
                                    <input asp-for="Input.Localization" class="form-control" placeholder="Lokalizacja">
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6" style="padding: 10px;">
                                <fieldset>
                                    <input asp-for="Input.BirthDate" class="form-control" asp-format="{0:yyyy-MM-dd}"/>
                                    <!-- <input placeholder="Data urodzenia" class="form-control" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" id="date" value="@Model.UserAccount.BirthDate" /> -->
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6" style="padding: 10px;">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="upload">Zapisz</button>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

