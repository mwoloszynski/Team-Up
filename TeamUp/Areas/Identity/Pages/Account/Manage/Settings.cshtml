@page
@model TeamUp.Areas.Identity.Pages.Account.Manage.SettingsModel
@inject SignInManager<TeamUpUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<partial name="_StatusMessage" for="StatusMessage" />

<h1>Dane personalne</h1>
<div class="row">
    <div class="col-md-6">
        <p>Twoje konto posiada dane personalne, które nam przekazałeś. W tym miejscu możesz pobrać te dane lub je usunąć.</p>
        <p>
            <strong>Usunięcie tych danych spowoduje bezpowrotne usunięcie konta.</strong>
        </p>
        <form asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-default" type="submit">Pobierz</button>
        </form>
        <p>
            <a asp-page="DeletePersonalData" class="btn btn-default">Usuń</a>
        </p>
    </div>
</div>


<h1>Zmień hasło</h1>
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.OldPassword"></label>
                <input asp-for="Input.OldPassword" class="form-control" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Zapisz</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}