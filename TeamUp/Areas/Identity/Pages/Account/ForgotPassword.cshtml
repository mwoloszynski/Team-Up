@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Zapomniałem hasła | Team-Up";
    ViewData["Description"] = "Team-Up: narzędzie do zakładania/wyszukiwania zespołów umożliwiających realizację start-upów";
    var url = Request.HttpContext.Request.Scheme + "://" + Request.Host;
    var imageUrl = Url.Content(url + "/img/team.png");
    ViewData["Image"] = imageUrl;
}

<div style="width: 100%; margin: 0 auto; text-align: center;">
    <h2>Zapomniałeś hasła?</h2>
    <h4>Podaj swój email.</h4>
    <hr />
    <div class="row" style="display: flex; flex-direction: row; justify-content: center;">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">Potwierdź</button>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
