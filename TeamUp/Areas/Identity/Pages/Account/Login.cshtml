@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie | Team-Up";
    ViewData["Description"] = "Team-Up: narzędzie do zakładania/wyszukiwania zespołów umożliwiających realizację start-upów";
    var url = Request.HttpContext.Request.Scheme + "://" + Request.Host;
    var imageUrl = Url.Content(url + "/img/team.png");
    ViewData["Image"] = imageUrl;
}
    <head>
        <link rel="stylesheet" href="~/css/tabs.css">
    </head>

    <section class="login-service" id="login-panel">
        <div class="container">
            <div class="col-md-10 col-md-offset-1">
                <div class="wrapper">
                    <div class="section-heading">
                        <h2>Logowanie</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="left-content">
                        <form id="account" method="post">
                            <div class="row">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <input asp-for="Input.Email" class="form-control" placeholder="Email"/>
                                        </div>
                                        
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <input asp-for="Input.Password" class="form-control" placeholder="Hasło"/>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <label class="checkbox2" asp-for="Input.RememberMe">
                                            Zapamiętaj mnie
                                            <input  asp-for="Input.RememberMe" />
                                            <span class="checkmark"></span>
                                        </label>
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-6" style="padding: 10px;">
                                            <fieldset>
                                                <button type="submit" id="form-submit" class="btn">Zaloguj się</button>
                                            </fieldset>
                                        </div>
                                        <div class="col-md-6" style="padding: 10px;">
                                            
                                                <a id="form-submit" class="btn" id="forgot-password" asp-page="./ForgotPassword" style="background-color: #4883ff; color: white; padding: 16px 10px; border-radius: 0; border: 1px solid #4883ff; font-weight: bold;">Zapomniałem hasła</a>
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <span>Nie masz jeszcze konta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się!</a></span>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

