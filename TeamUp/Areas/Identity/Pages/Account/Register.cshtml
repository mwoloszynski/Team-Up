@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja | Team-Up";
    ViewData["Description"] = "Team-Up: narzędzie do zakładania/wyszukiwania zespołów umożliwiających realizację start-upów";
    var url = Request.HttpContext.Request.Scheme + "://" + Request.Host;
    var imageUrl = Url.Content(url + "/img/team.png");
    ViewData["Image"] = imageUrl;
}

    <head>
        <link rel="stylesheet" href="~/css/tabs.css">
    </head>

    <section class="login-service" id="login-panel">
        <div class="container">
            <div class="col-md-10 col-md-offset-1">
                <div class="wrapper">
                    <div class="section-heading">
                        <h2>Rejestracja</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="left-content">
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="row">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <input asp-for="Input.FirstName" class="form-control" placeholder="Imię" />
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <input asp-for="Input.LastName" class="form-control" placeholder="Nazwisko"/>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <input asp-for="Input.Email" class="form-control" placeholder="Email"/>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <input asp-for="Input.BirthDate" class="form-control" />
                                        </div>
                                        <!--
                                        <input placeholder="Data urodzenia" class="form-control" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" id="date" />
                                        -->
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <input asp-for="Input.Password" class="form-control" placeholder="Hasło"/>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <div class="form-group">
                                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Potwierdź hasło"/>
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-6" style="padding: 10px;">
                                            <fieldset>
                                                <button type="submit" id="form-submit" class="btn">Zarejestruj się</button>
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <label class="checkbox2">
                                            Akceptuję <a asp-action="Terms" asp-controller="Home">Regulamin</a> strony
                                            <input asp-for="Input.AcceptTerms" />
                                            <span class="checkmark"></span>
                                        </label>
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <span>Masz już konto? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Zaloguj się!</a></span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

