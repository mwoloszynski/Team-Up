@page
@model TeamUp.Areas.Panel.Pages.UserApplicationModel
@{
    Layout = "/Areas/Panel/Pages/_Layout.cshtml";
    ViewBag.Data = Model.TeamId;
    ViewBag.Name = Model.TeamUser.Team.Name;
    ViewBag.Localization = Model.TeamUser.Team.Localization;

    ViewData["Title"] = "Podanie użytkownika | " + Model.TeamUser.Team.Name;
    ViewData["Description"] = "Panel zespołu " + Model.TeamUser.Team.Name + " - sekcja podania użytkownika";
}

<h1>Podanie na stanowisko: @Model.AppSpec.Name</h1>
<br /><br />

<div>
    <div class="col-md-6" style="margin-bottom: 10px;">
        <div class="modal-content" style="width: 70%;">
            <img src="data:image;base64,@Convert.ToBase64String(Model.AppUser.ProfilePicture)" style="padding: 15px;" />
            <h2>@Model.AppUser.FirstName @Model.AppUser.LastName</h2>
            

        </div>
    </div>

    <h4>@Model.UserApplication.Message</h4>

    <div class="blue-button" style="padding: 15px;">
        <form method="post">
            <button type="submit" value="Accept" name="isAccepted">Akceptuj</button>
            <button type="submit" value="Reject" name="isAccepted">Odrzuć</button>
        </form>
    </div>
</div>

